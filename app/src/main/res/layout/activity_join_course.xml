<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.jiangxin.peerevaluation2.ui.JoinCourse">

    <EditText
        android:background="@drawable/edit_text"
        android:id="@+id/course_code_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="please enter group code"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="126dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp" />

    <TextView
        android:id="@+id/coursename_join_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:textSize="22sp"
        android:text="group name:"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/course_code_join" />

    <TextView
        android:id="@+id/course_name_join"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"

        android:textSize="22sp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toRightOf="@+id/coursename_join_hint"
        app:layout_constraintTop_toBottomOf="@+id/course_code_join" />

    <TextView
        android:id="@+id/course_id_join_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="group reason:"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/coursename_join_hint"
        app:layout_constraintVertical_bias="0.076"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/course_id_join"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:textSize="22sp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/course_id_join_hint"
        app:layout_constraintTop_toBottomOf="@+id/course_name_join"
        app:layout_constraintVertical_bias="0.075" />

    <Button
        android:id="@+id/join_course_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:layout_marginTop="69dp"
        android:background="@drawable/button_shape"
        app:layout_constraintTop_toBottomOf="@+id/course_id_join_hint"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/join_course_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:text="cancel"
        android:background="@drawable/button_shape"
        app:layout_constraintTop_toBottomOf="@+id/course_id_join"
        android:layout_marginRight="55dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/join_course_confirm"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.923" />

    <Button
        android:id="@+id/course_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="enter"
        android:background="@drawable/button_shape"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        app:layout_constraintLeft_toRightOf="@+id/course_code_join"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.153" />
</android.support.constraint.ConstraintLayout>
