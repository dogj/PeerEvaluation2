<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:gravity="center_vertical|left"
    android:clickable="true"
    android:id="@+id/cont_course_item">


    <TextView
        android:id="@+id/course_name"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="1dp"
        app:layout_constraintVertical_bias="0.518"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/course_id"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="reason"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/course_name"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="0.518" />

    <TextView
        android:id="@+id/course_code_join"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/course_id"
        android:layout_marginLeft="-16dp"
        app:layout_constraintVertical_bias="0.518" />

    <ImageView
        android:id="@+id/course_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete"
        app:layout_constraintLeft_toRightOf="@+id/course_code_join"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
