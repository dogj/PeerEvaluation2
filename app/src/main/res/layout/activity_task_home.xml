<?xml version="1.0" encoding="utf-8"?>



<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiangxin.peerevaluation2.ui.Course_home"
    >

    <RelativeLayout
        android:id="@+id/button_area"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rec_task_home"
        app:layout_constraintHorizontal_bias="0.0">

        <Button
            android:id="@+id/Question_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:background="@drawable/button_shape"
            android:text="submit" />

        <Button
            android:id="@+id/task_home_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/button_shape"
            android:text="Cancel"
            android:layout_alignBaseline="@+id/Question_submit"
            android:layout_alignBottom="@+id/Question_submit"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="76dp"
            android:layout_marginEnd="76dp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_task_home"
        android:layout_width="347dp"
        android:layout_height="377dp"
        android:layout_above="@+id/button_area"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="54dp"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp" />

</android.support.constraint.ConstraintLayout>
