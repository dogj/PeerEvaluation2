<?xml version="1.0" encoding="utf-8"?>



<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.jiangxin.peerevaluation2.ui.Course_home"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/button_area"
        android:layout_width="359dp"
        android:layout_height="68dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rec_task_home"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">


        <Button
            android:id="@+id/Question_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/button_shape"
            android:text="submit"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/task_home_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/button_shape"
            android:text="Cancel"


            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@+id/Question_submit"
            android:layout_marginLeft="31dp" />




        <Button
            android:id="@+id/verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/button_shape"
            android:text="verify \n statues"
            android:padding="5dp"
            android:gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@+id/task_home_cancel"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.75" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/question_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_task_home"
        android:layout_width="353dp"
        android:layout_height="379dp"
        android:layout_above="@+id/button_area"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="64dp"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/question_test" />

    <TextView
        android:id="@+id/email_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="remind them"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/group_hint"
        tools:layout_editor_absoluteY="33dp" />

</android.support.constraint.ConstraintLayout>
